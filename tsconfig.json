{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@assets": ["./src/assets"],
      "@components": ["./src/components"],
      "@interfaces": ["./src/interfaces"],
      "@navigation": ["./src/navigation"],
      "@screens": ["./src/screens"],
      "@theme": ["./src/theme"],
      "@utils": ["./src/utils"],
      "@hooks": ["./src/hooks"],
      "@services": ["./src/services"],
      "@store": ["./src/store"],
      "@common": ["./src/common"],
      "@languages": ["./src/languages"],
    }
  },
  "exclude": [
    "./node_modules",
    "./babel.config.js",
    "./metro.config.js",
    "./.prettierrc.js",
    "./.eslintrc.js"
  ]
}
